<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dylanmcdowell.thetowersapplication.MainActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gridLayout"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:rowCount="6">

        <Button
            android:layout_width="180dp"
            android:layout_height="82dp"
            android:id="@+id/button5"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:text="View Work Orders"
            android:layout_column="1"
            android:layout_row="5" />

        <Button
            android:layout_width="180dp"
            android:layout_height="82dp"
            android:text="Make Announcement"
            android:id="@+id/button10"
            android:layout_row="5"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Compose Message"
            android:id="@+id/textView7"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="18dp" />

        <ImageButton
            android:layout_width="133dp"
            android:layout_height="129dp"
            android:id="@+id/imageButton"
            android:layout_below="@+id/gridLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@mipmap/service_icon"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Submit Work Order"
            android:id="@+id/textView3"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="18dp" />

        <ImageButton
            android:layout_width="136dp"
            android:layout_height="134dp"
            android:id="@+id/imageButton2"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@mipmap/compose_1"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="View Inbox"
            android:id="@+id/textView13"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sign Out"
            android:id="@+id/textView15"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="18dp" />

        <ImageButton
            android:layout_width="127dp"
            android:layout_height="124dp"
            android:id="@+id/imageButton3"
            android:layout_row="4"
            android:layout_column="1"
            android:src="@mipmap/mail"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="123dp"
            android:layout_height="121dp"
            android:id="@+id/imageButton4"
            android:layout_row="4"
            android:layout_column="2"
            android:src="@mipmap/sign_out"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView16"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_row="0"
            android:layout_column="0" />

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/TowersLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout" />

</RelativeLayout>
