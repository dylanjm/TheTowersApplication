<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dylanmcdowell.thetowersapplication.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_alignWithParentIfMissing="false"
        android:columnCount="3"
        android:rowCount="7"
        android:verticalSpacing="10dip"
        android:horizontalSpacing="10dip"
        android:columnWidth="300dip"
        android:gravity="center"
        android:stretchMode="spacingWidthUniform"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="111dp"
            android:layout_height="82dp"
            android:id="@+id/button5"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:text="View Work Orders"
            android:layout_column="0"
            android:layout_row="5" />

        <Button
            android:layout_width="131dp"
            android:layout_height="82dp"
            android:text="Make Announcement"
            android:id="@+id/button10"
            android:layout_row="5"
            android:layout_column="2"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    New Message"
            android:id="@+id/textView7"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="16dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imageButton"
            android:layout_below="@+id/gridLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@mipmap/service_icon"
            android:scaleType="fitCenter"
            android:tint="#709c00"
            android:padding="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  New Request"
            android:id="@+id/textView3"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="16dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imageButton2"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@mipmap/compose_1"
            android:scaleType="fitCenter"
            android:tint="#0926ff"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    View Inbox"
            android:id="@+id/textView13"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="     Sign Out"
            android:id="@+id/textView15"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="16dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imageButton3"
            android:layout_row="4"
            android:layout_column="0"
            android:src="@mipmap/mail"
            android:scaleType="fitCenter"
            android:tint="#0a1ce7"
            android:padding="20dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imageButton4"
            android:layout_row="4"
            android:layout_column="2"
            android:src="@mipmap/sign_out"
            android:scaleType="fitCenter"
            android:tint="#709c00"
            android:padding="20dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_row="6"
            android:layout_column="1"
            android:text="        " />

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/towers_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
